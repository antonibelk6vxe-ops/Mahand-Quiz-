let index = 0;
let score = 0;

function loadQuestion() {
  let q = questions[index];
  document.getElementById("question").innerText = (index+1) + ") " + q.q;

  let aBox = document.getElementById("answers");
  aBox.innerHTML = "";

  q.answers.forEach((ans, i) => {
    let btn = document.createElement("button");
    btn.innerText = (i+1) + ") " + ans;
    btn.onclick = () => checkAnswer(i, btn);
    aBox.appendChild(btn);
  });
}

function checkAnswer(i, btn) {
  if (i === questions[index].correct) {
    btn.classList.add("correct");
    score++;
  } else {
    btn.classList.add("wrong");
  }
  setTimeout(() => {
    index++;
    if (index < questions.length) {
      loadQuestion();
    } else {
      document.getElementById("quiz-box").innerHTML = "<h1>ØªÛ•ÙˆØ§Ùˆ Ø¨ÙˆÙˆ! ğŸ‘</h1><p>Ù†Ù…Ø±Û•Øª: "+score+" / "+questions.length+"</p>";
